<MainLayout title="Digital Ansøgning">
<div class="grid grid-cols-2">
	<div><Image src={front_pic} alt="portætbillede af pige" class="" /></div>
	<div><Image src={mappe} alt="computer mappe icon" class="" /></div>
</div>

<section>
  <div class="relative">
    <Image src={water} format="webp" alt="klippe i vandet" class="w-full h-full object-cover" />
    
    <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-full px-4 sm:px-10 lg:px-16 max-w-screen-xl">
      
		<!-- Overskrift med margin til de næste sektioner -->
      	<div class="text-center">
        	<p class="text-white font-bold text-2xl sm:text-4xl md:text-6xl">Kvalifikationer.</p>
      	</div>

     	 <!-- De tre div'er med billeder -->
      	<div class="py-3 px-6 border border-none rounded-[50px] bg-white/75 flex justify-center gap-10 sm:gap-15 lg:gap-50 mx-auto mt-16">
			<div><Image src={ai} alt="" class="w-10 sm:w-15 md:w-18 h-auto" /></div>
			<div><Image src={ps} alt="" class="w-10 sm:w-15 md:w-18 h-auto" /></div>
			<div><Image src={id} alt="" class="w-10 sm:w-15 md:w-18 h-auto" /></div>
    	</div>

    	<div class="py-3 px-6 border border-none rounded-[50px] bg-white/75 flex justify-center gap-10 sm:gap-15 lg:gap-50 mx-auto mt-16">
			<div><Image src={figma} alt="" class="w-10 sm:w-15 md:w-18 h-auto" /></div>
			<div><Image src={vscode} alt="" class="w-10 sm:w-15 md:w-18 h-auto"/></div>
			<div><Image src={github} alt="" class="w-10 sm:w-15 md:w-18 h-auto" /></div>
    	</div>

    	<div class="py-3 px-6 border border-none rounded-[50px] bg-white/75 flex justify-center gap-10 sm:gap-15 lg:gap-40 mx-auto mt-16">
			<div><Image src={html} alt="" class="w-10 sm:w-15 md:w-18 h-auto" /></div>
			<div><Image src={js} alt="" class="w-10 sm:w-15 md:w-18 h-auto" /></div>
			<div><Image src={css} alt="" class="w-10 sm:w-15 md:w-18 h-auto" /></div>
			<div><Image src={tailwind} alt="" class="w-10 sm:w-15 md:w-18 h-auto" /></div>
    	</div>
    </div>
  </div>
</section>

